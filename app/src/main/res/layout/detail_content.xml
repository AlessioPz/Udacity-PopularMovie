<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_title"
        android:layout_gravity="center_horizontal"
        android:minHeight="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/white"
        android:background="#0d47a1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:scrollIndicators="right">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/txt_overview"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.8"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="3dp" />
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="0.3">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_reviews"
                android:id="@+id/btn_reviews"
                android:background="#64B5F6"
                android:layout_marginBottom="10dp"
                android:typeface="serif"
                android:onClick="reviewsClick" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_favorites"
                android:id="@+id/btn_favorites"
                android:background="#64B5F6"
                android:layout_marginTop="10dp"
                android:typeface="sans"
                android:onClick="favoriteClick" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginRight="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Year"
                android:id="@+id/txt_release_date"
                android:gravity="right"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Vote avg."
                android:id="@+id/txt_vote_avg"
                android:gravity="right"
                android:layout_margin="2dp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:id="@+id/img_poster"
                android:layout_centerInParent="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/img_youyube"
                android:src="@drawable/youtube"
                android:layout_centerInParent="true"
                android:onClick="videoClick" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>